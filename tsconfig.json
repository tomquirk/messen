{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
